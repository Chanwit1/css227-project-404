<%- include('../partials/header.ejs') %>

<section class="py-5 text-center container" style="height: 50px;">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light"  style="text-align: center; color: rgb(79, 129, 236);
        text-shadow: 0 1px 0 rgb(51, 47, 47) ">Welcome To CWM movie!</h1>
      </div>
    </div>
</section>
<div class="dropdown" >
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false" 
  style="width: 300px; height: 50px; margin-left: 8px; margin-top: 10px; background-color: rgb(87, 114, 238);margin-left: 300px; margin-top: 100px;">
    GENRE
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <li><a href="/movie/genre/action"><button class="dropdown-item" type="button">action</button></a></li>
    <li><a href="/movie/genre/comedy"><button class="dropdown-item" type="button">comedy</button></a></li>
    <li><a href="/movie/genre/horror"><button class="dropdown-item" type="button">horror</button></a></li>
    <li><a href="/movie/genre/fantasy" ><button class="dropdown-item" type="button">fantasy</button></a></li>
  </ul>
</div>

<div class="album py-5 bg-light">
  <div class="container" style="width: 960px;">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3" >
      <% movie.forEach(function(movie){  %>
      <div class="col">
        <div class="card shadow-sm">
          <img src='<%= movie.image %>' class='card-img-top' style="height: 350px; width: 220px;">

          <div class="card-body">
             <h5 class = 'card-title' style="color: red;text-shadow: 0 1px 0 rgb(37, 36, 36)"><%= movie.name %></h5> 
            <!-- <p class="card-text"><%= movie.desc %></p> -->
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group" style="background-color: rgb(158, 211, 247);">
                <a href="/movie/<%= movie._id %>" class="btn btn-sm btn-outline-secondary" style="color: black;text-shadow: 0 1px 0 rgb(238, 234, 234)">View</a>
                <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> -->
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div

<%- include('../partials/footer.ejs') %>